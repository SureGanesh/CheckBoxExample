<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kvana.checkboxexample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/title_message"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="20dp" />

    <CheckBox
       android:id="@+id/fruit_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apple"
        android:onClick="selectItem"/>

    <CheckBox
        android:id="@+id/fruit_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orange"
        android:onClick="selectItem"/>

    <CheckBox
        android:id="@+id/fruit_mango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mango"
        android:onClick="selectItem"/>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/done"
        android:onClick="finalSelection"/>

    <TextView
        android:id="@+id/final_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"
        />


</LinearLayout>
